{
    "name": "cesargb/laravel-modules",
    "description": "Organize your Laravel application into independent local modules using Composer path repositories",
    "type": "library",
    "keywords": [
        "laravel-package",
        "modular-architecture"
    ],
    "license": "MIT",
    "require": {
        "composer/composer": "^2.9"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^12.0",
        "larastan/larastan": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "Cesargb\\Modules\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cesargb\\Modules\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cesargb\\Modules\\ModuleServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
